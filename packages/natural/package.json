{
  "name": "@edtf-ts/natural",
  "version": "0.3.0",
  "description": "Natural language to EDTF parser with locale support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:grammar && tsup",
    "build:grammar": "nearleyc src/grammar.ne -o src/grammar.ts && node scripts/fix-grammar-esm.js",
    "dev": "npm run build:grammar && tsup --watch",
    "pretest": "npm run build:grammar",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "edtf",
    "natural-language",
    "date-parser",
    "nlp",
    "i18n",
    "locale"
  ],
  "author": "Bob Pritchett",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BobPritchett/edtf-ts.git",
    "directory": "packages/natural"
  },
  "homepage": "https://github.com/BobPritchett/edtf-ts#readme",
  "bugs": {
    "url": "https://github.com/BobPritchett/edtf-ts/issues"
  },
  "dependencies": {
    "@edtf-ts/core": "workspace:*",
    "nearley": "^2.20.1"
  },
  "devDependencies": {
    "@types/nearley": "^2.11.5",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
